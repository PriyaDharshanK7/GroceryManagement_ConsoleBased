package com.dharshan.GMP;
import java.util.Scanner;
public class AdminMenu {
	Scanner kb = new Scanner(System.in);
	Operations opr = new Operations();
	void disp_adminmenu() {
		System.out.println("WELCOME YOU ARE LOGINED AS A ADMIN");
		while(true) {
			System.out.println("\t\t__ ADMIN MENU __\n\t 1.ADD STOCK \n\t 2.UPDATE STOCK \n\t 3.MANAGE USERS \n\t 4.VIEW STOCKS \n\t 5.LOGOUT");
			int choice = kb.nextInt();
			switch(choice) {
			case 1:
				
				break;
			case 2:
				System.out.println("Update Stock Selected");
				break;
			case 3:
				System.out.println("Manage User Selected");
				break;
			case 4:
				System.out.println("Your Stocks are underway");
				break;
			case 5:
				System.out.println("Loging Out Please Wait...");
				kb.close();
				System.exit(0);
				break;
			default:
				System.out.println("Enter Correct Choice");
			}
		}
	}
}