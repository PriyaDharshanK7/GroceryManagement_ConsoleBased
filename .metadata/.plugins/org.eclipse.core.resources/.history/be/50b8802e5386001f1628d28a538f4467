package com.dharshan.GMP;
import java.util.Scanner;
public class MainApplication {
	public static void main(String[] args) {
		Scanner kb = new Scanner(System.in);
		int choice;
		boolean v;
		System.out.println("Welcome to My Grocery Management Application...");
		while(true) {
			System.out.println("\t\t--M E N U--\t\t"+"\n\t 1. View Products\n \t 2. Add New Product\n \t 3. Edit Existing Product\n \t 4. Delete Product\n \t 5. Exit");
			choice = kb.nextInt();
		    v = kb.hasNextInt();
		    System.out.println(v);
			switch(choice) {
			case 1:
				System.out.println("View Products Selected!");
				break;
			case 2:
				System.out.println("Add New Product Selected!");
				break;
			case 3:
				System.out.println("Update Product Selected!");
				break;
			case 4:
				System.out.println("Delete Product Selected!");
				break;
			case 5:
				System.out.println("Exiting... In A While");
				System.exit(0);
				break;
			default:
				System.out.println("Please Provide correct choice between 1 - 5");
			}
		}
	}
}
