package com.dharshan.GMP;
import java.util.Scanner;
public class AdminMenu {
	Scanner kb = new Scanner(System.in);
	void disp_adminmenu() {
		while(true) {
			System.out.println("WelCome User you are logined as Admin !\n \t\t --M E N U-- \n \t 1.Add New User\n\t 2.Remove User\n\t 3.Add New Product\n\t 4.View Products\n\t 5.Edit Products\n\t 6.Remove Products\n\t 7.Log Out");
			int choice = kb.nextInt();
			switch(choice) {
			case 1:
				System.out.println("Add New User in Users Table");
				break;
			case 2:
				System.out.println("Remove User from Users Table");
				break;
			case 3:
				System.out.println("Add New Product");
				break;
			case 4:
				System.out.println("View Products");
				break;
			case 5:
				System.out.println("Edit Products");
				break;
			case 6:
				System.out.println("Remove Products");
				break;
			case 7:
				System.out.println("Logging - out");
				break;
			}
		}
	}
}